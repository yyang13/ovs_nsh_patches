+	} else if ((flags & VXLAN_HF_GPE) && (vs->flags & VXLAN_F_GPE)) {
+		struct vxlanhdr_gpe *gpe;
+
+		gpe = (struct vxlanhdr_gpe *)vxh;
+		md->gpe = ntohs(gpe->next_proto);
+
+		buf.dst.u.tun_info.key.tun_flags |= TUNNEL_VXLAN_OPT;
